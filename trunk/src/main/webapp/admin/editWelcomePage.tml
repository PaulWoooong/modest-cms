<html t:type="layoutAdmin" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
    <h1>Edit Welcome Page Properties</h1>
    <div id="section">
    	<t:beaneditform t:id="form" t:object="welcomePage" exclude="pageType" add="mainImage">
			<t:parameter name="text">
				<t:label for="text"/>
		    	<t:textArea t:id="text" value="welcomePage.text" class="editField" />
			</t:parameter>
			<t:parameter name="text2">
				<t:label for="text2"/>
		    	<t:textArea t:id="text2" value="welcomePage.text2" class="editField" />
			</t:parameter>
			<t:parameter name="mainImage">
				<t:label for="mainImage"/>
		        <input t:type="upload" t:id="mainImage" t:value="welcomePage.mainImage"/>
			</t:parameter>
		</t:beaneditform>
    </div>
</html>