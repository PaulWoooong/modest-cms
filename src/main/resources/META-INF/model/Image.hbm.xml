<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="cz.koroptev.scms.model">

    <class name="Image" table="image">
    
		<id name="id" column="id">
			<generator class="increment"/>
		</id>
        
	    <property name="extension" length="5" not-null="true" />
	    <property name="name" length="100" not-null="true" />
	    <property name="dateInsert" column="date_insert" />
    </class>
</hibernate-mapping>